/* components/car-list.wxss */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.car-list{
  width: 100%;
  max-height: 100vh;
  padding: 20rpx 0;
}
.car-item{
  width: 690rpx;
  height: 242rpx;
  justify-content: space-between;
  align-items: flex-start;
  overflow: hidden;
  background: #FFFFFF;
  margin: 20rpx auto;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
}
.car_left{
  align-items: flex-start;
  margin-right: 10rpx;
}
.car_title{
  width: 300rpx;
  font-weight: bold;
  color: #252621;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  overflow:hidden;
}
.car_intro_tag{
  margin-right: 20rpx;
  font-size: 22rpx;
  color: #888888;
}
.car_price{
  margin-top: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #252621;
}
.car_red{
  font-size: 34rpx;
  color: #ED1D1D;
}
.car_intro{
  font-size: 22rpx;
  color: #888888;
}
.car_right{
  align-items: flex-end;
}
.car_icon{
  width: 342rpx;
  height: 114rpx;
}
.car_btn{
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #252621;
}