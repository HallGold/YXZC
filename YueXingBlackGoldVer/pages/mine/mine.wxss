/* pages/mine/mine.wxss */
.getUserInfo-btn{
  margin-left: 80rpx !important;
  padding: 0;
  line-height: 50rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0) !important;
  text-align: left;
}
.mine-head{
  position: relative;
  width: 100%;
  height: 360rpx;
  justify-content: center;
  align-items: flex-start;
  background: #404040;
}
.mine-info{
  justify-content: center;
}
.info-icon{
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx 0 30rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.info-right{
  flex-grow: 1;
  align-items: flex-start;
  text-align: left;
}
.info-name{
  color: white;
  font-size: 32rpx;
}
.info-level{
  line-height: 40rpx;
  margin-top: 19rpx;
  padding: 0 22rpx;
  background: rgba(255,255,255,0.55);
  border-radius: 20rpx;
  color: white;
  text-align: center;
}
.vip-bg{
  background: #FFFFFF;
  color: #BA9478;
}
.register-btn{
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
  background: linear-gradient(91deg, #BA9478, #FFE2BF);
  border-radius: 20rpx;
  text-align: center;
}
.signyet{
  background: #A9A9A9;
}
.register-icon{
  width: 26rpx;
  height: 26rpx;
}
.register-text{
  margin-left: 8rpx;
  color: white;
  font-size: 24rpx;
}


.member-area{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  height: 80rpx;
  padding: 0 30rpx;
  background: #161616;
  border-radius: 10rpx 10rpx 0px 0px;
}
.member-icon{
  width: 44rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.member-text1{
  color: #FFCE8F;
}
.member-text2{
  color: #888888;
}


.mine-function{
  justify-content: space-evenly;
}
.function-item{
  width: 330rpx;
  height: 156rpx;
  margin: 50rpx 0;
  justify-content: center;
  align-items: flex-start;
  background: #252621;
  border-radius: 16rpx;
}
.function-bg{
  width: 100%;
  margin-bottom: 30rpx;
  justify-content: space-evenly;
}
.function-text{
  font-size: 28rpx;
  color: #FFFFFF;
}
.function-icon{
  width: 40rpx;
  height: 40rpx;
}
.function-text1{
  margin-left: 60rpx;
  font-size: 24rpx;
  color: #888888;
}
.function-text2{
  margin-left: 60rpx;
  font-weight: 500;
  font-size: 36rpx;
  color: #BA9478;
}


.mine-relate{
  margin-top: 20rpx;
}
.common-line{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  justify-content: flex-start;
}
.relate-icon{
  width: 38rpx;
  height: 38rpx;
}
.relate-text{
  margin-left: 20rpx;
}


button{
  width: 100% !important;
  height: 100rpx !important;
  line-height: 100rpx !important;
  margin-left: 20rpx !important;
  padding: 0 !important;
  background: rgba(0, 0, 0, 0);
  color: #3b3b3b;
  font-size: 32rpx !important;
  font-weight: bold !important;
  text-align: left;
}