/* pages/mine-vip-one/mine-vip-one.wxss */
.vip-header{
  width: 100%;
  height: 272rpx;
  padding: 30rpx;
  background-color: #404040;
}
.mine-info{
  justify-content: center;
}
.info-icon{
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx 0 30rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.info-right{
  flex-grow: 1;
  align-items: flex-start;
  text-align: left;
}
.info-name{
  color: white;
  font-size: 32rpx;
}
.info-level{
  line-height: 40rpx;
  margin-top: 19rpx;
  padding: 0 22rpx;
  background: rgba(255,255,255,0.55);
  border-radius: 20rpx;
  color: white;
  text-align: center;
}
.vip-card{
  position: relative;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 650rpx;
  padding: 30rpx;
  background: linear-gradient(91deg, #BA9478, #FFE2BF);
  border-radius: 16rpx;
  z-index: 1;
}
.vip-text1{
  color: #252621;
  font-size: 30rpx;
}
.vip-text2{
  line-height: 69rpx;
  color: #252621;
  font-size: 22rpx;
  border-top: 1rpx solid white;
}
.black-btn{
  width: 136rpx;
  line-height: 50rpx;
  background: #BA9478;
  border-radius: 25rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
}